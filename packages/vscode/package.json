{
    "name": "zava-review-vscode",
    "displayName": "Zava Review",
    "description": "AI-powered code review for your workspace using Claude, OpenAI, or Gemini",
    "version": "0.1.0",
    "publisher": "zavadzki7",
    "author": {
        "name": "Marcus Zavadzki"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/zavadzki72/zava-review"
    },
    "bugs": {
        "url": "https://github.com/zavadzki72/zava-review/issues"
    },
    "homepage": "https://github.com/zavadzki72/zava-review#readme",
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Linters",
        "Other"
    ],
    "keywords": [
        "code review",
        "AI",
        "linter",
        "Claude",
        "OpenAI",
        "Gemini",
        "code quality"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "zava-review.analyzeAll",
                "title": "Zava Review: Analyze All Files",
                "icon": "$(search)"
            },
            {
                "command": "zava-review.analyzeChanges",
                "title": "Zava Review: Analyze Pending Changes",
                "icon": "$(git-compare)"
            },
            {
                "command": "zava-review.configure",
                "title": "Zava Review: Configure",
                "icon": "$(gear)"
            }
        ],
        "configuration": {
            "title": "Zava Review",
            "properties": {
                "zava-review.configPath": {
                    "type": "string",
                    "default": "zava-review.yml",
                    "description": "Path to the zava-review configuration file"
                },
                "zava-review.outputDir": {
                    "type": "string",
                    "default": ".zava-review",
                    "description": "Directory for output reports"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "tsc",
        "build": "node esbuild.js",
        "package": "node esbuild.js --production",
        "clean": "rimraf dist",
        "watch": "node esbuild.js --watch",
        "vsce:package": "vsce package",
        "vsce:publish": "vsce publish"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^2.22.0",
        "@zava-review/core": "*",
        "esbuild": "^0.20.0",
        "rimraf": "^5.0.5"
    }
}