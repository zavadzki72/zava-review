{
  "name": "zava-review",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered code review plugin for VSCode and PR pipelines",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @zava-review/core && npm run build -w @zava-review/cli && npm run build -w zava-review-vscode",
    "build:core": "npm run build -w @zava-review/core",
    "build:cli": "npm run build -w @zava-review/cli",
    "build:vscode": "npm run build -w zava-review-vscode",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint packages --ext .ts",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}